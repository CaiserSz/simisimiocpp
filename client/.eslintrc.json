{
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "plugins": ["cypress"],
  "env": {
    "cypress/globals": true
  },
  "rules": {
    "testing-library/prefer-screen-queries": "off",
    "testing-library/no-render-in-setup": "off"
  },
  "overrides": [
    {
      "files": ["**/*.cy.js", "**/*.cy.jsx"],
      "rules": {
        "jest/expect-expect": "off",
        "jest/valid-expect": "off",
        "jest/valid-expect-in-promise": "off"
      }
    }
  ]
}
