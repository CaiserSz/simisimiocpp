# EV Station Simulator - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=9220
HOST=0.0.0.0

# Security Configuration  
# ENABLE_AUTH: Set to 'true' if authentication is required (default: false for simple simulator)
ENABLE_AUTH=false
JWT_SECRET=your_super_secure_64_character_jwt_secret_key_here_change_for_production
JWT_EXPIRES_IN=24h

# Storage (JSON-based - no database needed!)
STORAGE_TYPE=json
DATA_DIR=./src/data

# CSMS Connection
CSMS_URL=ws://localhost:9221

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log

# Redis Configuration (optional - only enable if caching needed)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_if_needed

# Performance
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_CLUSTERING=false
WORKER_COUNT=4

# Monitoring
ENABLE_METRICS=true
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password

# Features
CLIENT_URL=http://localhost:9220
