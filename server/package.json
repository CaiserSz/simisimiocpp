{
    "name": "charging-simulator-server",
    "version": "1.0.0",
    "description": "AC Charging Station Simulator with OCPP 2.0.1 support",
    "main": "src/app.js",
    "type": "module",
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=9.0.0"
    },
    "scripts": {
        "start": "node --experimental-modules src/app.js",
        "dev": "nodemon --experimental-modules src/app.js",
        "test": "cross-env NODE_ENV=test SIM_FUNCTIONAL_TESTS=true NODE_OPTIONS='--experimental-vm-modules' jest --detectOpenHandles",
        "test:quick": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern='tests/compliance|__tests__/controllers' --detectOpenHandles",
        "test:full": "cross-env NODE_ENV=test SIM_FUNCTIONAL_TESTS=true WS_TESTS=true E2E_TESTS=true NODE_OPTIONS='--experimental-vm-modules' jest --detectOpenHandles",
        "test:unit": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=__tests__/controllers",
        "test:integration": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=tests/integration",
        "test:csms": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=csms-integration --runInBand",
        "test:e2e": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=e2e-validation --runInBand",
        "test:watch": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --watch --runInBand",
        "test:coverage": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --coverage --runInBand",
        "test:json-storage": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern='SimpleUserStore|auth.controller.updated' --runInBand",
        "test:simulator": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern='SimulationManager|WebSocketServer' --runInBand",
        "test:integration:mock": "cross-env NODE_ENV=test CSMS_MODE=mock NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=tests/integration --runInBand",
        "test:integration:remote": "cross-env NODE_ENV=test CSMS_MODE=remote NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=tests/integration --runInBand",
        "test:compliance": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=tests/compliance",
        "test:real-csms": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=real-csms-integration --runInBand",
        "test:parallel": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --maxWorkers=75%",
        "test:fast": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=tests/compliance --maxWorkers=75%",
        "test:load": "k6 run src/tests/performance/load-test.js",
        "test:stress": "k6 run --vus 2000 --duration 10m src/tests/performance/load-test.js",
        "lint": "eslint . --ext .js",
        "format": "prettier --write .",
        "mock:csms": "node --experimental-modules src/mock/index.js"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.3",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "ioredis": "^5.3.2",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "nodemailer": "^7.0.10",
        "ocpp-rpc": "^1.0.2",
        "prom-client": "^15.1.0",
        "socket.io": "^4.7.4",
        "uuid": "^9.0.1",
        "winston": "^3.10.0",
        "winston-daily-rotate-file": "^4.7.1",
        "ws": "^8.14.2",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.23.0",
        "@babel/preset-env": "^7.23.0",
        "babel-jest": "^29.7.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.51.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.28.1",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "socket.io-client": "^4.7.4",
        "supertest": "^6.3.3"
    }
}