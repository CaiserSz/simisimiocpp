# EV Station Simulator - Environment Configuration

# Application
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Security (CRITICAL - Generate secure values for production)
JWT_SECRET=your_super_secure_64_character_secret_key_here_change_this
JWT_EXPIRES_IN=24h

# Storage (JSON-based - no database needed!)
STORAGE_TYPE=json
DATA_DIR=./src/data

# Redis (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# CSMS Connection
CSMS_URL=ws://localhost:9220

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@evsimulator.local

# Performance
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_CLUSTERING=false
WORKER_COUNT=4

# Monitoring
ENABLE_METRICS=true
GRAFANA_USER=admin
GRAFANA_PASSWORD=grafana123

# Features
CLIENT_URL=http://localhost:3000
